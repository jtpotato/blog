---
type Props = {
  title: string;
  date: Date;
};

const { title, date } = Astro.props;
---

<title>{title}</title>
<main class="max-w-2xl m-auto p-4">
  <h1 class="text-4xl font-bold mb-2">{title}</h1>
  <p class="text-secondary">
    {
      date.toLocaleDateString("en-us", {
        year: "numeric",
        month: "short",
        day: "numeric",
      })
    }
  </p>
  <br />
  <article class="prose">
    <slot />
    <br />
  </article>
</main>
